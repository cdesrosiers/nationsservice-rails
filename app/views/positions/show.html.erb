<% provide(:title, @position.name) %>
<div class="row">
  <div class="span16">
    <section>
      <h1><%= @position.name %></br>
      <%= logo_for @position %>
      </h1>
      <p>
        Application deadline:
        <% if !@position.deadline.nil? %>
          <%= @position.deadline.to_s(:long) %></br>
        <% end %>
        <% if !@city_name.blank? %>
          City: <%= @city_name %></br>
        <% end %>
        <% if !@province_name.blank? %>
          State/Province: <%= @province_name %></br>
        <% end %>
        <% if !@country_name.blank? %>
          Country: <%= @country_name %></br>
        <% end %>
        Type: <%= position_type @position %></br>
        <% if !@position.description.nil? %>
          <%= @position.description %></br>
        <% end %>
        <% if signed_in? %>
          <%= link_to "Edit Position", edit_position_path(@position) %>
        <% end %>
      </p>
    </section>
  </div>
</div>