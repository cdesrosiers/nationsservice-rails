<div id="edit-institution">
    <%= collection_select :selected_institution, :state, @states, :state, :state, { prompt: 'Select a state' }, action: "/users/update_institutions_list" %>
      
    <%= collection_select :user, :institution_id, @institutions, :id, :name, { include_blank: true }, action: "/users/update_campuses_list"  %>
    
    <% if @campuses.any? %>
    <%= collection_select :user, :campus_id, @campuses, :id, :name, include_blank: true %>
    <% end %>
</div>