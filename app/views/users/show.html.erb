<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span5">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>
        <% if !@user.institution_id.nil? %>
          <%= Institution.find_by_id(@user.institution_id).name %>
          <% if !@user.campus_id.nil? %>
            - <%= Campus.find_by_id(@user.campus_id).name %>
          <% end %>
        <% end %>
      </p>
    </section>
  </aside>
</div>